@model CIAT.DAPA.AEPS.Data.Database.FrmQuestions

@{
    ViewData["Title"] = Localizer["Title"];
    ViewData["Action"] = Localizer["Action"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="section-title">@Localizer["Subtitle"]</h2>
<p class="section-lead">@Localizer["Description"]</p>

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header buttons">
                <h4>@Localizer["Options"]</h4>
            </div>
            <div class="card-body">
                <a asp-action="Index" class="btn btn-icon btn-warning"><i class="fas fa-angle-left"></i> @Localizer["Return"]</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-icon btn-primary"><i class="fas fa-edit"></i> @Localizer["Edit"]</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-6 col-lg-6">
        <div class="card">
            <div class="card-header buttons">
                <h4>@Localizer["Subtitle"]</h4>
            </div>
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Label)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Label)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Type)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Type)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Order)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Order)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Enable)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Enable)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ExtId)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ExtId)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Created)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Created)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Updated)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Updated)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.BlockNavigation)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.BlockNavigation.Description)
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-lg-6">
        <div class="card">
            <div class="card-header buttons">
                <h4>@Localizer["Rules"]</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                            @foreach (var item in Model.FrmQuestionsRules)
                            {
                            <tr>
                                <td>@item.App</td>
                                <td>@item.Type</td>
                                <td>@item.Rule</td>
                                <td>@item.Message</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>